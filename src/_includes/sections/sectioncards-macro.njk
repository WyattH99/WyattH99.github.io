
{% macro sectioncards(picture, heading, paragraph) %}

<div class="flex flex-col items-center rounded-lg shadow md:flex-row md:max-w-xl bg-[#676C68]">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" 
            src={{ picture }} alt=""/>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-black">{{ heading }}</h5>
        <p class="mb-3 font-normal text-black">{{ paragraph }}</p>
    </div>
</div>


{% endmacro %}